require googlecode python [ python_dep=2.4 ]

SUMMARY="Python bindings for webkit-gtk"

SLOT="1.0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        dev-libs/libxslt
        gnome-bindings/pygobject:2
        gnome-bindings/pygtk:2
        net-libs/webkit-gtk:1[>=1.1.10]
"

src_prepare() {
    default

    # disable python byte compiling
    rm py-compile
    ln -s "$(type -P true)" py-compile
}

src_install() {
    default
    python_bytecompile
}

